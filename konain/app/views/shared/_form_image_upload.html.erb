<div class="box-section">
  <h1 class="title-section">Add Images</h1>
  <div class="box-content">
    <div class="target">
      <% if f.object.attachments.exists? %>
        <% f.object.attachments.each do |attachment| %>
          <div class="image-url-div">
            <%= image_tag attachment.image.url(:index), class: "image-preview-size" %>
            <p class="url-txt"><%= attachment.image_file_name %></p>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class='field'>
      <%= f.fields_for :attachments do |attachment| %>
        <% if attachment.object.image.exists? %>
          <p class="url-txt"><%= attachment.object.image_file_name %></p>
        <% else %>
          <p class="url-txt-preview"></p>
          <div class="error-div"></div>
        <% end %>
        <div class="chooseImgFile">
          <%= attachment.file_field :image, class: "pictureInput" %>
          <span class="chooseFileBnt"><i class="fa fa-upload" aria-hidden="true"></i> Choose File</span>
        </div>
        <%= attachment.link_to_remove '', class: "remove-property-image" %>
        <span></span>
      <% end %>
    </div>

    <div class="add-image-btn">
      <%= f.link_to_add :attachments, class: 'btnPrimary' do %>
        <i class="fa fa-plus-circle" aria-hidden="true"></i>  Add an Image
      <% end %>
    </div>
  </div>
</div>
