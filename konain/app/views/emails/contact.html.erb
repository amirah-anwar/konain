<div class="content-wrapper clearfix">
  <%= render "shared/banner", banner_heading: "Contact Us", banner_name: "Contact Us", heading_tag: :h1 %>

  <div class="container">
    <div id="contact-18" class="post-18 page type-page status-publish hentry" >

      <div id="property_map" class="contact_map"></div>

      <div class="clearfix"></div>
      <div class="row-fluid contact-us-layout">
        <div class="span9">
          <div class="form-wrapper">

            <div class="contact-form-title">
              Weâ€™d Love to Hear From You, Get In Touch With us !
            </div>

            <div class="contact-form-excerpt">
              Email us with any question or inquiries or call 042-111-786-512. We would be happy to answer your question and set up a meeting with you if required in 24 hours. Thanks
            </div>

            <%= form_for @email, url: send_contact_mail_path, method: :post, html: { id: "contact-page-form" } do |f| %>
              <div class="controls controls-row">
                <%= f.text_field :sender_name, placeholder: '*Name ', required: true, class: 'span4' %>
                <%= f.email_field :user_email, placeholder: '*Email', required: true, class: 'span4', pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$', title: "user@example.com" %>
                <%= f.text_field :contact, placeholder: '*Contact Number ', required: true, class: 'span4', maxlength: 15, pattern: "[0-9]+", title: "03001111111/04231111111" %>
              </div>

              <div class="controls">
                <%= f.text_area :body, placeholder: '*Message', required: true, rows: 12, class: 'span12' %>
              </div>

              <div class="controls">
                <%= f.submit 'Send Email', class: 'btnPrimary pull-right', id: "submit" %>
              </div>
            <% end %>

          </div>
        </div>

        <%= render "company_info" %>
      </div>
    </div>
  </div>
</div>

<% content_for :map_initializer do %>
  <script type='text/javascript' src='http://maps.google.com/maps/api/js?sensor=false'></script>
<% end %>
<% content_for :js_init do %>
  PropertyMap.init();
<% end %>
