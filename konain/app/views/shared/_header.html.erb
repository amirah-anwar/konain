<header id="header" role="banner">
  <div class="header-background">
    <div class="container">
      <div class="row-fluid logo-containe">
        <div class="pull-left logo-sec">
          <%= link_to image_tag("logoKonainMarketing.png"), :root %>
        </div>
        <div class="pull-right">
          <div class="login-btns">
            <ul>
              <li>
                <i class='fa fa-envelope'></i>konainmarketing@gmail.com
              </li>
              <li>
                <i class="fa fa-phone"></i>042-111-786-512
              </li>
              <% if user_signed_in? %>
                <% if current_user.admin? %>
                  <li>
                    <a href="/admin">
                      <i class="fa fa-sign-in fa-rotate-270" aria-hidden="true"></i>ADMIN PANEL
                    </a>
                  </li>
                <% elsif current_user.agent? %>
                  <li>
                    <a href="/admin">
                      <i class="fa fa-sign-in fa-rotate-270" aria-hidden="true"></i>ADMIN PANEL
                    </a>
                  </li>
                  <li>
                    <%= link_to current_user do %>
                      <i class="fa fa-user" aria-hidden="true"></i>
                      <%= "#{current_user.first_name}'s Profile" %>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to current_user do %>
                      <i class="fa fa-user" aria-hidden="true"></i>
                      <%= "#{current_user.name}'s Profile" %>
                    <% end %>
                  </li>
                <% end %>
                <li class="signoutLink"><%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out" aria-hidden="true"></i>SIGNOUT
              <% end %>
                </li>
              <% else %>
                <li>
                  <a href="/users/sign_up">
                    <i class="fa fa-sign-in fa-rotate-270" aria-hidden="true"></i>SIGNUP
                  </a>
                </li>
                <li>
                  <a href="/users/sign_in">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>LOGIN
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="nav-background navbar-static-top">
    <div class="container">
      <div id="social-network" class="hidden-desktop">
        <%= link_to new_property_path, class: 'new-property' do %>
          <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Property
        <% end %>
        <%= render 'shared/social_links' %>
      </div>
      <div class="clearfix navbar">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <div class="nav-collapse collapse">
              <nav id="nav-main" role="navigation">
                <ul id="menu-primary-menu" class="nav">
                  <li class="menu-item dropdown">
                    <li class="menu-item <%= active_tab("properties", "home_page") %>">
                      <%= link_to 'Home', root_path %>
                    </li>
                  <li class='menu-item dropdown <%= active_tab('properties', 'property_types') %>'>
                    <%= link_to 'Property Types', properties_path %>
                    <ul class='dropdown-menu'>
                      <% @all_property_types.each do |type| %>
                        <li class='menu-item'>
                          <%= link_to type, property_types_path(property_type: type) %>
                        </li>
                      <% end %>
                    </ul>
                  </li>
                  <li class="menu-item dropdown <%= active_tab("users", "agents") %>">
                    <%= link_to 'Agents', agents_path, class: 'dropdown-toggle' %>
                  </li>
                  <li class="menu-item dropdown <%= active_tab("projects", "index") %>">
                    <%= link_to 'Projects', projects_path %>
                    <ul class="dropdown-menu">
                      <% Project::CITIES.each do |city| %>
                        <li class="menu-item">
                          <%= link_to city, projects_path(city: city) %>
                        </li>
                      <% end %>
                      <li class="menu-item">
                        <%= link_to "Others", projects_path(title: "other") %>
                      </li>
                    </ul>
                  </li>
                  <li class='menu-item <%= active_tab('emails', 'contact') %>'>
                    <%= link_to 'Contact Us', contact_us_path %>
                  </li>
                  <li class='menu-item <%= active_tab('pages', 'about_us') %>'>
                    <%= link_to 'About Us', about_us_path %>
                  </li>
                  <li class="menu-item dropdown" id="property-type-cursor">
                    <%= link_to '#' do %>
                    More <i class="fa fa-sort-desc" aria-hidden="true"></i>
                    <% end %>
                    <ul class="dropdown-menu">
                      <li class="menu-item">
                        <%= link_to "Lawyers", lawyers_path %>
                        <%= link_to 'Architects', architects_path %>
                        <%= link_to 'Property Listing', properties_path %>
                      </li>
                    </ul>
                  </li>
                </ul>
                <div id="social-network" class="visible-desktop">
                  <%# if user_signed_in? && current_user.admin? %>
                    <%#= link_to new_project_path, class: 'new-property' do %>
                      <!-- <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Project -->
                    <%# end %>
                  <%# end %>
                  <%= link_to new_property_path, class: 'new-property' do %>
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Property
                  <% end %>
                  <%= render 'shared/social_links' %>
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
