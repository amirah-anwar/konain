<div class="container buildingImg">
  <div class="row-fluid">
    <div class="span12">
      <%= devise_error_messages! %>
      <div class="loginpage-cont">

        <div class="loginpage-inner forgotPage">
          <h1>Change your password</h1>
          <div class="span8 wrapper-center">
            <div style="margin-top:40px">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>

              <div class='field'>
                <%= f.label :password, 'New password' %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: 'off', required: true %>
              </div>

              <div class='field'>
                <%= f.label :password_confirmation, 'Confirm new password' %>
                <%= f.password_field :password_confirmation, autocomplete: 'off', required: true %>
              </div>

              <div class='rememberPassCont'>
              <div class="leftSec">
                <%= render 'devise/shared/links' %>
              </div>
              <div class="rightSec">
                <%= f.submit 'Change my password',class: 'btnPrimary' %>
              </div>
              <div class="clearfix"></div>
            </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
