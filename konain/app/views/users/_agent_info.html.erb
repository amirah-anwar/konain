<div id="contactAgent" class="modal hide fade sendMailAgentPopup" tabindex="-1" role="dialog" aria-labelledby="contactAgentLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
    <h3>
      Send message to Agent <%= titleize(agent.name) %>
    </h3>
  </div>

  <div class="modal-body">
    <%= form_for @email, url: send_mail_path, method: :post do |f| %>
      <div class="controls controls-row form-horizontal">
        <div class="row-fluid control-group">
          <%= f.label :sender_name, 'Name:', class: 'span4' %>
          <%= f.text_field :sender_name, placeholder: 'Enter Your Name', required: true, class: 'span8' %>
        </div>
        <div class="row-fluid control-group">
          <%= f.label :contact, 'Contact Number:', class: 'span4' %>
          <%= f.text_field :contact, placeholder: '03001111111 / 04231111111', required: true, class: 'span8', pattern: "[0-9]{1,13}" %>
        </div>
        <div class="row-fluid control-group">
          <%= f.label :user_email, 'Your Email:', class: 'span4' %>
          <%= f.email_field :user_email, placeholder: 'user@example.com', class: 'span8' %>
          <%= hidden_field_tag :agent_id, agent.id %>
        </div>
      </div>

      <div class="controls row-fluid control-group">
        <%= f.label :body, 'Your Message:', class: 'span4' %>
        <div  class="span8">
        <%= f.text_area :body, placeholder: 'Write Your Message', required: true, rows: 12, class: '' %>
        </div>
      </div>

      <div class="controls">
        <%= f.submit 'Send Email', class: 'btn btn-contact submitBtn pull-right' %>
      </div>
    <% end %>
  </div>
</div>

<aside id="property_agent-2" class="widget property-agent">
  <h3 class="widget-title">
    Agent Info
  </h3>
  <div class="content-widget">

    <%= link_to image_tag(agent_image(agent)), assigned_properties_user_path(agent, state: "approved") %>
    <div class="agent-widget-name">
      <%= link_to titleize(agent.name), assigned_properties_user_path(agent, state: "approved") %>
    </div>

    <div class="agent-widget-phone">
      <i class="fa fa-mobile" aria-hidden="true"></i>
      <%= agent.mobile_number %>
    </div>

    <div class="agent-widget-phone">
      <i class="fa fa-phone" aria-hidden="true"></i>
      <%= agent.home_number %>
    </div>

    <div class="agent-widget-email">
      <i class="fa fa-envelope" aria-hidden="true"></i>
      <%= agent.email %>
    </div>

    <div class="clear"></div>
    <div class="agent-widget-excerpt">
      <%= truncate(agent.agent_description, omission: "", length: 255) %>
    </div>
    <div class="agent-desc">
      <a role="button" data-toggle="modal" class="button button-search-widget" href="#contactAgent">
        Contact Agent
      </a>
    </div>

  </div>
</aside>
