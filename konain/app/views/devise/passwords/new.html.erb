<div class="container buildingImg">
  <div class="row-fluid">
    <div class="span12">
      <%= devise_error_messages! %>
      <div class="loginpage-cont">
        <div class="loginpage-inner forgotPage">
          <h1>Forgot your password?</h1>

          <div class="span8 wrapper-center">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

            <div class='field'>
              <%= f.label :email %>
              <div class="image-field-holder">
                <%= f.email_field :email, required: true, placeholder: 'user@example.com' %>
                <i class="fa fa-user"></i>
              </div>
            </div>

            <div class='rememberPassCont'>
              <div class="leftSec">
                <%= render 'devise/shared/links' %>
              </div>
              <div class="rightSec">
                <%= f.submit 'Reset Password', class: 'btnPrimary' %>
              </div>
              <div class="clearfix"></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
